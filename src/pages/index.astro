---
import Footer from "../components/principals/Footer.astro";
import Header from "../components/principals/Header.astro";
import Main from "../components/principals/Main.astro";
import Layout from "../layout/layout.astro";
---

<style is:global>
  :root {
    --bg-primary-color: #06b6d4;
    --bg-background: #27272a;
    --text-old: 2rem;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
  }
</style>

<Layout>
  <Header />
  <Main />
  <Footer />
</Layout>
