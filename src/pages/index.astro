---
import Footer from "../components/principals/Footer.astro";
import Header from "../components/principals/Header.astro";
import Main from "../components/principals/Main.astro";
import Layout from "../layout/layout.astro";
---

<style is:global>
  :root{
    --bg-primary-color: 6, 182, 212; 
  }

  html {
    font-family: system-ui, -apple-system;
    background-color: red;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>

<Layout>
  <Header />
  <Main />
  <Footer />
</Layout>
