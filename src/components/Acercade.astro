---
import ImageMe from "/me.png";
---

<section
  class="flex flex-col justify-center items-center my-16 rounded-lg bg-cyan-500"
>
  <div class="w-full md:flex-row flex flex-col">
    <div
      class="w-full py-3 flex flex-col flex-1 justify-center items-center text-center md:gap-y-8 rounded-lg"
    >
      <span class="mt-32"></span>
      <h1
        class="m-0 sm:text-4xl max-sm:text-3xl md:text-7xl md:px-4 xl:text-8xl text-center font-bold text-white tracking-tighter"
      >
        Daniel Lozano
        <span class="text-black" id="dev-title">Developer</span>
      </h1>
      <nav>
        <ul
          class="flex list-none items-center m-0 p-0 gap-3 [&>li>a:hover]:text-black font-medium text-[#434343]"
        >
          <li class="hidden sm:block transition">
            <a href="#skills">Skills</a>
          </li>
          <li class="hidden sm:block"><a href="#projects">Projects</a></li>
          <li class="hidden sm:block"><a href="#estudio">Estudio</a></li>
          <li class="github-icon">
            <a
              class="text-white"
              href="https://github.com/DaniLozan11"
              target="_blank"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="currentColor"
                ><path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
          </li>
          <li>
            <button>
              <a
                href="#"
                target="_blank"
                class="relative inline-flex items-center justify-start px-6 py-2 overflow-hidden transition-all bg-white rounded hover:bg-white group"
              >
                <span
                  class="w-48 h-48 rounded rotate-[-40deg] bg-cyan-700 absolute bottom-0 left-0 -translate-x-full ease-out duration-500 transition-all translate-y-full mb-9 ml-9 group-hover:ml-0 group-hover:mb-32 group-hover:translate-x-0"
                ></span>
                <span
                  class="relative w-full text-left text-black transition-colors duration-300 ease-in-out group-hover:text-white flex items-center"
                  >Ver mi CV <svg
                    aria-hidden="true"
                    class="w-5 h-5 ml-2 -mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </span>
              </a>
            </button>
          </li>
        </ul>
      </nav>
      <span class="mt-40"></span>
    </div>
    <div class="w-full h-auto flex flex-1 items-center justify-center bg-zinc-600">
      <img
        src={ImageMe}
        alt="Yo"
        class="max-w-[300px] h-auto rounded-full bg-no-repeat bg-p bg-center bg-cover"
      />
    </div>
  </div>
</section>
