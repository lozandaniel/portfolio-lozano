---
import projects from '../data/data_projects.json'
---

<section id="projects" class="py-4 pb-32 dark:text-white">
  <h2 class="text-center font-extrabold text-2xl pb-6">Projects</h2>
  <div
    class="grid gap-5 auto-rows-auto grid-cols-1 sm:grid-cols-2 xl:grid-cols-3"
  >
    {
      projects.map((project) => {
        const { description, image, technologies, name, links } = project
        const { repo, website } = links

        return (
          <article class="flex flex-col justify-center items-center shadow-3xl p-4 rounded-md dark:bg-zinc-800">
            <div class="w-full h-auto flex relative group items-center justify-center">
              <img
                class="transition group-hover:scale-105 object-fill"
                src={image}
                alt={'Imagen del proyecto' + name}
              />
              <div class="flex gap-4 absolute bg-zinc-800/70 w-full h-full opacity-0 visible group-hover:opacity-100 group-hover:scale-105 transition-all items-center justify-center">
                <a href={`${repo}`} target="_blank">
                  <img
                    class="w-8 group-hover:scale-150"
                    src="/actuales_ti/github.svg"
                    alt={`Repo Github de: ${name}`}
                  />
                </a>
              </div>
            </div>
            <h3 class="py-4 text-center font-semibold text-lg">{name}</h3>
            <p class="pb-4">{description}</p>
            <div class="flex justify-center items-center gap-2">
              <span class="text-[#666]">Tecnologias utilizadas - </span>
              {technologies.map((el) => (
                <img class="w-7 h-7" src={el} alt="Icons" />
              ))}
            </div>
          </article>
        )
      })
    }
  </div>
</section>
