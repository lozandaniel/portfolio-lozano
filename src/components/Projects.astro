---
import projects from "../data/data_projects.json";
---

<section class="py-4">
  <h2 class="text-center font-bold text-2xl pb-6">Projects</h2>
  <div
    class="grid gap-5 auto-rows-auto grid-cols-1 sm:grid-cols-2 xl:grid-cols-3"
  >
    {
      projects.map((project) => {
        const { description, image, technologies, name, links } = project;
        const { repo, website } = links;

        return (
          <article class="flex flex-col justify-center bg-zinc-700/50 p-4 rounded-md">
            <div class="flex relative w-full h-auto group">
              <img class="transition group-hover:bg-[size:200%]" src={image} alt={"Imagen del proyecto" + name} />
              <div class="flex gap-4 absolute bg-cyan-600/50 w-full h-full opacity-0 visible group-hover:opacity-100 transition-all items-center justify-center">
                <a href={`${repo}`} target="_blank">
                  <img class="w-8 group-hover:scale-150" src="/actuales_ti/github.svg" alt="GitHub" />
                </a>
                <a href={`${website}`} target="_blank">
                  <img class="w-8 group-hover:scale-150" src="/images/link.svg" alt="Link Icon" />
                </a>
              </div>
            </div>
            <h3 class="py-4 text-center font-semibold">{name}</h3>
            <p class="pb-4">{description}</p>
            <div class="flex-1 flex justify-center items-center gap-3">
              <span>Tecnologias utilizadas:</span>
              {technologies.map((el) => (
                <img class="w-8 h-8" src={el} alt="Icons" />
              ))}
            </div>
          </article>
        );
      })
    }
  </div>
</section>
