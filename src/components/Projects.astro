---
import { projects } from "../data/data.js";
---

<section>
  <div class="py-8">
    <h2 class="text-center font-bold text-2xl pb-6">Projects</h2>
    <div
      class="grid gap-5 auto-rows-auto grid-cols-1 sm:grid-cols-2 xl:grid-cols-3"
    >
      {
        projects.map(({ name, description, image, technologies }) => (
          <div class="flex flex-col justify-center bg-zinc-700/50 p-4 rounded-md">
            <picture class=" bg-red-600 flex justify-center ">
              <img src={image} alt="Image" class="w-full h-auto" />
            </picture>
            <h3 class="py-4 text-center font-semibold">{name}</h3>
            <p class="py-4">{description}</p>
            <div>
              <span class="text-cyan-400">Tecnologias utilizadas:</span>
              <div>
                <span>Js</span>
                <span>Html</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
